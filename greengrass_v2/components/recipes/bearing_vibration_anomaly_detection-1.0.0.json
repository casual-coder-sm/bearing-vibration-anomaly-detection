{
    "RecipeFormatVersion": "2020-01-25",
    "ComponentName": "bearing_vibration_anomaly_detection",
    "ComponentVersion": "1.0.0",
    "ComponentDescription": "Mimic IOT Device reading of bearing vibration to detect and report anomaly",
    "ComponentPublisher": "Shailesh Marathe",
    "ComponentConfiguration": {
      "DefaultConfiguration": {
        "Message": " ",
        "accessControl": {
            "aws.greengrass.ipc.mqttproxy": {
              "collect_device_data:mqttproxy:1": {
                "policyDescription": "Allows access to publish/subscribe to all topics.",
                "operations": [
                  "aws.greengrass#PublishToIoTCore",
                  "aws.greengrass#SubscribeToIoTCore"
                ],
                "resources": [
                  "*"
                ]
              }
            }
        }
      }
    },
    "ComponentDependencies": {
      "collect_device_data": {
        "VersionRequirement": ">=1.0.0 < 2.0.0",
        "DependencyType": "SOFT"
      }
    },
    "Manifests": [
      {
        "Platform": {
          "os": "linux"
        },
        "Lifecycle": {
          "Install":{
              "RequiresPrivilege":true,
              "script": "python3 -m pip install --user awsiotsdk numpy pandas"
          },
          "Run": {
            "RequiresPrivilege":true,
            "script":"python3 -u {artifacts:path}/bearing_vibration_anomaly_detection.py \"{configuration:/Message}\""
          }   
        },
