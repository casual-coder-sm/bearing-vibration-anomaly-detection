{
    "RecipeFormatVersion": "2020-01-25",
    "ComponentName": "collect_device_data",
    "ComponentVersion": "1.0.0",
    "ComponentDescription": "Mimic IOT bearing vibration tracking device",
    "ComponentPublisher": "Shailesh M",
    "ComponentConfiguration": {
      "DefaultConfiguration": {
        "Message": " ",
        "accessControl": {
            "aws.greengrass.ipc.mqttproxy": {
              "collect_device_data:mqttproxy:1": {
                "policyDescription": "Allows access to publish/subscribe to all topics.",
                "operations": [
                  "aws.greengrass#PublishToIoTCore",
                  "aws.greengrass#SubscribeToIoTCore"
                ],
                "resources": [
                  "*"
                ]
              }
            }
        }
      }
    },
    "Manifests": [
      {
        "Platform": {
          "os": "linux"
        },
        "Lifecycle": {
          "Run": "python3 -u {artifacts:path}/publish_device_readings.py \"{configuration:/Message}\""
        },
        "Artifacts": [
            {
              "Uri": "s3://anomaly-detection-from-bearing-vibration-project-bucket/greengrass_v2/components/artifacts/collect_device_data/1.0.0/publish_device_readings.py",
              "Digest": "XdH21BYkO8+QmpKp8hYmQOY+xcCH7+qDkXZ0A1BFCm4=",
              "Algorithm": "SHA-256",
              "Unarchive": "NONE",
              "Permission": {
                "Read": "OWNER",
                "Execute": "NONE"
              }
            }
        ]       
      },      
      {
        "Platform": {
          "os": "windows"
        },
        "Lifecycle": {
          "Run": "py -3 -u {artifacts:path}/publish_device_readings.py \"{configuration:/Message}\""
        },
        "Artifacts": [
          {
            "Uri": "s3://anomaly-detection-from-bearing-vibration-project-bucket/greengrass_v2/components/artifacts/collect_device_data/1.0.0/publish_device_readings.py",
            "Digest": "XdH21BYkO8+QmpKp8hYmQOY+xcCH7+qDkXZ0A1BFCm4=",
            "Algorithm": "SHA-256",
            "Unarchive": "NONE",
            "Permission": {
            "Read": "OWNER",
            "Execute": "NONE"
            }
          }
        ]
      }
    ]
}

  